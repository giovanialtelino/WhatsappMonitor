@page "/"
@namespace WhatsappMonitor.Blazor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp Monitor</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <script src="~/_content/BlazorInputFile/inputfile.js"></script>
    <link href="css/site.css" rel="stylesheet" />

<script suppress-error="BL9992">
    window.getScrollToTop =  (selector) => {
            if (selector){
            return document.querySelector(selector).scrollTop}
        }

    window.getMaxScrollHeight = (selector) => {
        if(selector){
            return document.querySelector(selector).scrollHeight - document.querySelector(selector).clientHeight }
    }

    window.setScrollTop = (selector) => {
        if(selector){
            document.querySelector(selector).scrollTop = 0;
            return 0;
        }
    }

        window.setScrollBottom = (selector) => {
        if(selector){
            document.querySelector(selector).scrollTop = document.querySelector(selector).scrollHeight;
            return 0;
        }    }

          window.setScrollDown = (selector) => {
        if(selector){
            document.querySelector(selector).scrollTop = 250;
            return 0;
        }    }


</script>


</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="components-reconnect-modal"></div>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

<!-- Reference the included moment.js javascript file. -->
<script src="_content/ChartJs.Blazor/moment-with-locales.min.js" type="text/javascript" language="javascript"></script>

<!-- Reference the included ChartJs javascript file. -->
<script src="_content/ChartJs.Blazor/Chart.min.js" type="text/javascript" language="javascript"></script>

<!-- This is the glue between the C# code and the ChartJs charts -->
<script src="_content/ChartJs.Blazor/ChartJsBlazorInterop.js" type="text/javascript" language="javascript"></script>

<!-- Some styling -->
<link rel="stylesheet" href="_content/ChartJs.Blazor/ChartJSBlazor.css" />

</body>
</html>
